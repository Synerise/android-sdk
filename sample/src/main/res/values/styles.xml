<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/primary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.White">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- ********************************************************************************************************************************** -->

    <style name="TextDefault" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextPrimary" parent="TextDefault">
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextPrimary.Small">
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="TextPrimary.Medium">
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="TextPrimary.Large">
        <item name="android:textSize">@dimen/text_18</item>
    </style>

    <style name="TextPrimary.Huge">
        <item name="android:textSize">@dimen/text_20</item>
    </style>

    <style name="TextPrimary.Header">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/space_content</item>
        <item name="android:layout_marginBottom">@dimen/space_content</item>
    </style>

    <style name="TextSecondary" parent="TextDefault">
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="TextSecondary.Mini">
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <style name="TextSecondary.Small">
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="TextSecondary.Medium">
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="TextSecondary.Large">
        <item name="android:textSize">@dimen/text_20</item>
    </style>

    <style name="TextSecondary.Header">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/space_content</item>
        <item name="android:layout_marginBottom">@dimen/space_content</item>
    </style>

    <style name="TextTertiary" parent="TextDefault">
        <item name="android:textColor">@color/textTertiary</item>
    </style>

    <style name="TextTertiary.Mini">
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <style name="TextTertiary.Small">
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <!-- ********************************************************************************************************************************** -->

    <style name="TextToolbar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextToolbar.Large">
        <item name="android:textSize">@dimen/text_30</item>
        <item name="android:textColor">@color/transparent</item>
    </style>

    <!-- ********************************************************************************************************************************** -->

    <!-- ********************************************************************************************************************************** -->

    <style name="BaseButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ButtonPrimary" parent="BaseButton">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonSecondary" parent="BaseButton">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonTertiary" parent="BaseButton">
        <item name="android:background">@drawable/button_white</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- ********************************************************************************************************************************** -->

    <style name="LayoutContent">
        <item name="android:layout_marginTop">@dimen/space_small</item>
        <item name="android:layout_marginBottom">@dimen/space_small</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/space_content</item>
    </style>

    <!-- ********************************************************************************************************************************** -->

    <style name="RatingBarColors" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/alto</item>
        <item name="colorControlActivated">@color/outrageous</item>
    </style>

    <!-- ********************************************************************************************************************************** -->

    <style name="AppCardView" parent="CardView.Light">
        <item name="cardCornerRadius">@dimen/corners_small</item>
        <item name="cardElevation">@dimen/elevation</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@drawable/elevate_on_touch</item>
    </style>

    <style name="AppCardView.Space">
        <item name="android:layout_marginStart">@dimen/space_small</item>
        <item name="android:layout_marginEnd">@dimen/space_small</item>
        <item name="android:layout_marginTop">@dimen/space_mini</item>
        <item name="android:layout_marginBottom">@dimen/space_mini</item>
    </style>

    <style name="AppCardView.NoEnd">
        <item name="android:layout_marginStart">@dimen/space_small</item>
        <item name="android:layout_marginTop">@dimen/space_mini</item>
        <item name="android:layout_marginBottom">@dimen/space_mini</item>
    </style>

    <style name="AppAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>
</resources>
